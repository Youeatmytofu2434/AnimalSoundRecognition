<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/profilepage_nameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/profilepage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NameEmpty"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/profilepage_nameHeader" />

    <Button
        android:id="@+id/profilepage_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        />

    <TextView
        android:id="@+id/profilepage_emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_nameHeader"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/profilepage_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmailEmtpy"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/profilepage_emailHeader"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_name"
        android:layout_marginTop="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>