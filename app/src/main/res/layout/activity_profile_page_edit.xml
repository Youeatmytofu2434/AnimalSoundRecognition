<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/profilepage_edit_companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Company's Name"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/profilepage_edit_companyDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company's Descriptions"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepage_edit_companyName"
        />

    <TextView
        android:id="@+id/profilepage_edit_nameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_edit_companyName"
        android:layout_marginTop="83dp"/>

    <EditText
        android:id="@+id/profilepage_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NameEmpty"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_edit_companyName"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/profilepage_edit_nameHeader" />

    <Button
        android:id="@+id/profilepage_edit_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/profilepage_edit_emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_edit_nameHeader"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/profilepage_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmailEmtpy"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/profilepage_edit_emailHeader"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profilepage_edit_name"
        android:layout_marginTop="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>