<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/single_file_list_playButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/list_play_btn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/single_file_list_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="16dp"
        android:textColor="@color/purple_200"
        android:text="File Name"
        app:layout_constraintStart_toEndOf="@+id/single_file_list_playButton"
        app:layout_constraintTop_toTopOf="@id/single_file_list_playButton" />

    <TextView
        android:id="@+id/single_file_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="@+id/single_file_list_playButton"
        app:layout_constraintStart_toEndOf="@+id/single_file_list_playButton" />
</androidx.constraintlayout.widget.ConstraintLayout>